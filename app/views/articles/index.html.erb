<h1>All Articles</h1>

<% if logged_in? %>
<section>
	<%= link_to "Create New Article", new_article_path, class: 'create_article' %>
</section>
<% end %>

<section>
	<ul id="articles">
	  <% @articles.each do |article| %>
	    <li>
	      <%= link_to article.title, article_path(article), class: 'article_title' %>
	    </li>
	  <% end %>
	</ul>
</section>
